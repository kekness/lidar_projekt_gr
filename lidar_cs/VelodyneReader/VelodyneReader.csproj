<Project Sdk="Microsoft.NET.Sdk">

<PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PlatformTarget>x64</PlatformTarget>
    
    <UseWindowsForms>true</UseWindowsForms> 
    <ApplicationRequiresSingleThreadedApartment>true</ApplicationRequiresSingleThreadedApartment>
</PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PacketDotNet" Version="1.4.8" />
    <PackageReference Include="Raylib-cs" Version="7.0.2" />
    <PackageReference Include="SharpPcap" Version="6.3.1" />
    <FrameworkReference Include="Microsoft.WindowsDesktop.App"/>
  </ItemGroup>

</Project>
